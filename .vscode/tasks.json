{
    "version": "0.1.0",
    "command": "gcc",
    "args": ["${file}", "-o", "${fileBasenameNoExtension}.exe", "-ggdb3", "-Wall", "-static", "-std=c11", "-finput-charset=UTF-8"],
    "showOutput": "always",
    "problemMatcher": {
        "owner": "c",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}